# App
LOG_LEVEL=INFO

# Green API (https://green-api.com)
GREEN_API_INSTANCE_ID=your_instance_id
GREEN_API_TOKEN=your_instance_token
GREEN_API_HOST=https://api.green-api.com

# Groq API (https://console.groq.com) - LLM & STT
OPENROUTER_API_KEY=gsk_your_groq_api_key
OPENROUTER_MODEL=llama-3.1-8b-instant
OPENROUTER_BASE_URL=https://api.groq.com/openai/v1

# Bot Settings
BOT_NICKNAME=ботяра
SUMMARY_MESSAGE_COUNT=50

# Admin (optional - your phone number for /ban, /unban commands)
# Format: 71234567890@c.us
ADMIN_CHAT_ID=

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
